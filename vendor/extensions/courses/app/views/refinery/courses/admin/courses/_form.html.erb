<%= form_for [refinery, :courses_admin, @course] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @course,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
    
  <div class='field'>
    <%= f.label :is_active -%>
    <%= f.check_box :is_active, :checked => @course[:is_active] -%>
  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @course.photo,
               :toggle_image_display => false %>     	
  </div>
  
  <div class='field'>
    <%= f.label :teacher_name -%>
    <%= f.text_field :teacher_name -%>
  </div>
  
  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "courses/course" -%>
  </div>
  
  <div class='field'>
    <%= f.label :duration -%>
    <%= f.text_field :duration -%>
  </div>

  <div class='field'>
    <%= f.label :classes_start_on -%>
    <%= f.date_select :classes_start_on, {:include_blank => true, :default => nil} -%>
  </div>

  <div class='field'>
    <%= f.label :classes_end_on -%>
    <%= f.date_select :classes_end_on, {:include_blank => true, :default => nil} -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.courses.admin.courses.course'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @course.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>