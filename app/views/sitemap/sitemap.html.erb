<% content_for :body do %>
<div id="sitemap">
	<div class="colored-box">
		<h4>Mapa do sítio</h4>
	</div>
	<section class="add-vertical-space" id="general_pages">
		<h4>Páginas gerais</h4>
		<ul>
			<% @pages.each do |page| %>
				<li><%= link_to page.title, page.slug %></li>
			<% end %>
		</ul>
	</section>
	<section class="add-vertical-space" id="newsarticles">
		<h4>Eventos e notícias</h4>
		<ul>
			<% @newsarticles.each do |newsarticle| %>
				<li><%= link_to newsarticle.headline, refinery.newsarticles_newsarticle_path(newsarticle) %></li>
			<% end %>
		</ul>
	</section>
</div>
<% end %>

<%= render '/refinery/content_page' %>
